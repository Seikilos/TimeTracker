<Window x:Class="TimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
<DockPanel Margin="2">
    
     <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"><TextBox Width="100" x:Name="startTime" GotFocus="startTime_GotFocus"></TextBox> <Button Margin="5,0" Click="Button_Click">Start</Button><Button>Stop</Button></StackPanel>
     <ListView DockPanel.Dock="Bottom" Name="list" Margin="0,5" ItemsSource="{Binding Cats}" Height="100">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Button Content="{Binding}" Click="ButtonBase_OnClick"></Button>
                
            </DataTemplate>
            
        </ListView.ItemTemplate>
        
    </ListView>

        <TextBox Margin="0,5,0,0"  MinLines="10" VerticalScrollBarVisibility="Auto" x:Name="output"></TextBox>

    </DockPanel>
</Window>
